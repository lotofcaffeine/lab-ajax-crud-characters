<section class="container list">
    <h1>Ironhack Characters API</h1>

    <div class="characters-container">
        <div class="character-info">
            <div>ID:<span class="id"></span></div>
            <div>Name:<span class="name"></span></div>
            <div>Ocupation:<span class="occupation"></span></div>
            <div>Is a Cartoon?:<span class="cartoon"></span></div>
            <div>Weapon:<span class="weapon"></span></div>
        </div>
    </div>

    <section class="operations">
        <div class="operation">
            <button id="fetch-all">Fetch all</button>
        </div>
        <div class="operation search-id">
            <label for="character-id">Search by ID: </label>
            <input class="character-id" type="text" name="character-id">
            <button id="fetch-one">Fetch one</button>
        </div>
        <div class="operation delete">
            <label for="character-id-delete">Delete by ID: </label>
            <input type="text" name="character-id-delete">
            <button id="delete-one">Delete one</button>
        </div>

    </section>
</section>
<section class="container">
    <section class="form-container create">
        <h2>New Character</h2>
        <form id="new-character-form" class="character-form">
            <div class="field">
                <label class="text-left" for="name">Name: </label>
                <input type="text" name="name" required>
            </div>
            <div class="field">
                <label for="occupation">Occupation: </label>
                <input type="text" name="occupation" required>
            </div>
            <div class="field">
                <label for="weapon">Weapon: </label>
                <input type="text" name="weapon" required>
            </div>
            <div class="field">
                <label for="cartoon">Is a Cartoon: </label>
                <input name="cartoon" type="checkbox">
            </div>
            <button id="send-data">Create</button>

        </form>

    </section>

    <section class="form-container">
        <h2>Edit Character</h2>
        <form id="edit-character-form" class="character-form">
            <div class="field">
                <label for="id">ID: </label>
                <input type="text" name="chr-id">
            </div>
            <div class="field">
                <label for="name">Name: </label>
                <input type="text" name="name">
            </div>
            <div class="field">
                <label for="occupation">Occupation: </label>
                <input type="text" name="occupation">
            </div>
            <div class="field">
                <label for="weapon">Weapon: </label>
                <input type="text" name="weapon">
            </div>
            <div class="field">
                <label for="cartoon">Is a Cartoon: </label>
                <input type="checkbox" name="cartoon">
            </div>
            <button id="send-data">Update</button>
        </form>
    </section>
</section>